{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "alwaysStrict": true,
    "allowJs": true,
    "outDir": "js",
    
  },
  "lib": ["ES2021"],
  "include": ["packages/*", "ts/*", "ts/**/*"],
  // "exclude": ["packages/rollup.config.js"]
}

